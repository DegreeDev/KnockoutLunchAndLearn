<div id="dataGrid" data-url="@Url.Action("UserData", "Grid")">
	<table class="table table-striped table-hover">
		<thead>
			<tr data-bind="foreach: columns">
				<th data-bind="template: { name: headerTemplate || 'blank-template', data: title }"></th>
			</tr>
		</thead>
		<tbody data-bind="foreach: data">
			<tr data-bind="foreach: $parent.columns">
				<td data-bind="template: { name: dataTemplate || 'blank-template', data: $parent[prop] }"></td>
			</tr>
		</tbody>
	</table>
	<label data-bind="text: currentCount"></label>
	<select data-bind="visible: pageSizeFilterOptions, options: pageSizeFilterOptions, value: pageSize, event: { 'change': GetCurrentPage }">
	</select>
	<ul class="pagination">
		<li><a href="#" data-bind="click: GetPreviousPage">&laquo;</a></li>
		<li><a href="#"  data-bind="text: page"></a></li>
		<li><a href="#" data-bind="click: GetNextPage">&raquo;</a></li>
	</ul>
</div>

@section scripts{
	<script type="text/html" id="name-template">
		<label data-bind="text: $data"></label>
	</script>
	<script type="text/html" id="id-template">
		<span data-bind="text: $data"></span>
	</script>
	<script type="text/html" id="blank-template">
		<!-- ko text: $data -->
		<!-- /ko -->
	</script>
	<script src="~/Scripts/DataGrid.js"></script>
}
